<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/bg_white"
              android:minHeight="80dp"
              android:orientation="horizontal"
              tools:ignore="MissingPrefix">

    <com.shiwaixiangcun.customer.widget.TimeLineMark
        android:id="@+id/item_time_line_mark"
        android:layout_width="16dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:paddingTop="20dp"
        app:beginLine="@android:color/darker_gray"
        app:endLine="@android:color/darker_gray"
        app:lineSize="2dp"
        app:marker="@drawable/shape_gray_circle"
        app:markerSize="12dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="10dp"
        android:minHeight="80dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:maxLines="3"
            android:minLines="1"
            android:paddingTop="16dp"
            android:textColor="@color/black_text_100"
            android:textSize="16sp"
            tools:text="您的服务单已审核，"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_record"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:minHeight="18dp"
            android:textColor="@color/black_text_60"
            android:textSize="12sp"
            tools:text="2017-09-10 11:56"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_divider_0.5"/>
    </RelativeLayout>
</LinearLayout>

