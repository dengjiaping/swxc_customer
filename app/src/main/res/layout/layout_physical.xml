<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <com.shiwaixiangcun.customer.widget.CircleImageView
        android:id="@+id/civ_user_avatar"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        app:civ_border_color="@color/ui_green"
        app:civ_border_overlay="false"
        app:civ_border_width="3dp"/>

    <ImageView
        android:id="@+id/iv_flag"
        android:layout_width="24dp"
        android:layout_height="18dp"
        android:layout_alignBottom="@+id/civ_user_avatar"
        android:layout_alignEnd="@+id/civ_user_avatar"
        android:src="@drawable/urgency"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_relationship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/civ_user_avatar"
        android:layout_centerInParent="true"
        android:text="我"
        android:textColor="#FF444444"
        android:textSize="12sp"/>

    <TextView

        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_relationship"
        android:layout_centerInParent="true"
        android:text="(西门吹雪)"
        android:textColor="#FF444444"
        android:textSize="12sp"/>

</RelativeLayout>