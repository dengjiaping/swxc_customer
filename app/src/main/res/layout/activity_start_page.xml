<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_white"
    tools:context="com.shiwaixiangcun.customer.ui.activity.StartPageActivity">
    <ImageView
        android:id="@+id/iv_logo_start"
        android:layout_marginTop="113dp"
        android:layout_centerHorizontal="true"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/start_page"/>

    <TextView
        android:id="@+id/tv_center_word"
        android:textSize="16sp"
        android:textColor="@color/word_black"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/iv_logo_start"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="世外生活\n发现生活的精彩"/>
    <TextView

        android:textSize="12sp"
        android:textColor="@color/word_little_grad"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/version_bottom"/>
</RelativeLayout>
