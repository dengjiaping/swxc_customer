<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="18dp"

            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/word_white"
            android:background="@drawable/acr_blue_bg"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="受理中"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_accept_record"
        android:textSize="16sp"
        android:textColor="@color/word_black"

        android:layout_marginTop="14dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我加水管坏了，我要舒服撒飞洒发发顺丰阿萨德撒大所撒打算阿萨德"/>
    <TextView
        android:id="@+id/tv_accept_time"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="18dp"
        android:textColor="@color/word_little_grad"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:00"/>

</LinearLayout>