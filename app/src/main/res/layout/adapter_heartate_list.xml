<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_white">
    <RelativeLayout
        android:background="@color/ui_white"
        android:id="@+id/rl_heart_list"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/tv_heartate_list_time"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:textSize="14sp"
            android:text="2017-10-10 17:23"
            android:textColor="@color/word_grad_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_heatate_list_data"
                android:textSize="16sp"
                android:textColor="@color/word_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="88"/>
            <TextView
                android:textSize="16sp"
                android:textColor="@color/word_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" bpm"/>
        </LinearLayout>


    </RelativeLayout>
    <TextView
        android:layout_below="@+id/rl_heart_list"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ui_base_color"/>

</RelativeLayout>