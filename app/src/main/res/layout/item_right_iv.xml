<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/ui_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_toLeftOf="@+id/iv_coverPath"
            android:id="@+id/ll_left_word"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title"
                android:layout_marginTop="18dp"
                android:textColor="@color/word_black"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2017年健康生活从这些细节做起aaaaaaa"/>
            <TextView
                android:id="@+id/tv_summary"
                android:layout_marginTop="8dp"
                android:textColor="@color/word_grad"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2017年健康生活从这些细节做起aaaaaaa"/>
            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_marginTop="8dp"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_source"
                    android:textColor="@color/word_little_grad"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017年健康生活从这些"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_publishTime"

                    android:textColor="@color/word_little_grad"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17:30"/>
            </LinearLayout>

        </LinearLayout>
        <ImageView

            android:layout_marginLeft="15dp"
            android:id="@+id/iv_coverPath"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:background="@color/ui_grad_back"
            android:layout_width="90dp"
            android:layout_height="90dp" />
    </RelativeLayout>
</LinearLayout>