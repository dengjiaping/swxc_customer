<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shiwaixiangcun.customer.ui.fragment.RecipeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/top_bar_white"/>
    </LinearLayout>

    <com.shiwaixiangcun.customer.widget.tablayout.SlidingTabLayout
        android:id="@+id/tablayout_tools"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_white"
        app:tl_indicator_color="#1CCC8C"
        app:tl_indicator_height="3dp"
        app:tl_indicator_width_equal_title="true"
        app:tl_tab_padding="20dp"
        app:tl_tab_space_equal="false"
        app:tl_textBold="SELECT"
        app:tl_textSelectColor="#1CCC8C"
        app:tl_textUnselectColor="@color/black_text_60"
        app:tl_underline_color="#1A00"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/color_divider_0.5"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_recipe_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>


</LinearLayout>
