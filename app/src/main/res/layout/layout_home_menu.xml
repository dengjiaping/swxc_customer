<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_bottom_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_menu_height"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/llayout_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/menu_image"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal"
            android:padding="6dp"
            android:src="@drawable/selector_main_home"/>

        <TextView
            android:id="@+id/menu_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/main_home"
            android:textColor="@color/home_menu_text"
            android:textSize="@dimen/home_menu_text_size"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llayout_mall"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/menu_image"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal"
            android:padding="6dp"
            android:src="@drawable/selector_main_mall"/>

        <TextView
            android:id="@+id/menu_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/main_mall"
            android:textColor="@color/home_menu_text"
            android:textSize="@dimen/home_menu_text_size"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llayout_me"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/menu_image"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal"
            android:padding="6dp"
            android:src="@drawable/selector_main_me"/>

        <TextView
            android:id="@+id/menu_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/main_me"
            android:textColor="@color/home_menu_text"
            android:textSize="@dimen/home_menu_text_size"/>
    </LinearLayout>


</LinearLayout>