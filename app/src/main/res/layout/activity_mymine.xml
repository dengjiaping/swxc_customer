<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mymine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_white"
    tools:context="com.shiwaixiangcun.customer.ui.activity.MymineActivity">
    <include android:id="@id/include"
        layout="@layout/top_bar_new_blue"/>
    <RelativeLayout
        android:id="@+id/rl_head_mine"
        android:background="@color/ui_green"
        android:layout_below="@+id/include"
        android:layout_width="match_parent"
        android:layout_height="136dp">
        <com.shiwaixiangcun.customer.widget.ImageViewPlus
            android:scaleType="fitXY"
            android:id="@+id/iv_head_my_image"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/defalt_image"/>
        <TextView
            android:layout_marginRight="50dp"
            android:lines="1"
            android:ellipsize="end"
            android:id="@+id/tv_user_name"
            android:layout_marginTop="43dp"
            android:layout_toRightOf="@+id/iv_head_my_image"
            android:textSize="22dp"
            android:textColor="@color/word_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网名"/>
        <ImageView
            android:layout_marginRight="20dp"
            android:layout_marginTop="56dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_white_to"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/rl_head_mine"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_feed_back"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColor="@color/word_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="意见反馈"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/to_right"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/ui_base_color"
            android:layout_marginLeft="20dp"/>
        <RelativeLayout
            android:id="@+id/rl_wy_lay"
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColor="@color/word_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物业电话"/>
            <TextView
                android:id="@+id/tv_wy_phone"
                android:text="0851-22851555"
                android:layout_marginRight="45dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:textColor="@color/word_grad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/to_right"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/ui_base_color"
            android:layout_marginLeft="20dp"/>
        <RelativeLayout
            android:id="@+id/rl_app_updata"
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColor="@color/word_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本更新"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/to_right"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/ui_base_color"
            android:layout_marginLeft="20dp"/>
        <RelativeLayout
            android:id="@+id/rl_for_life"
            android:layout_width="match_parent"
            android:layout_height="54dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColor="@color/word_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于世外生活"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/to_right"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/ui_base_color"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
</RelativeLayout>
